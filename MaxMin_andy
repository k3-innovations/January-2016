package EXercise4;

import java.util.Scanner;

public class MaxMin {
	public	int maxScore =0;
	public	int minScore =0;
	public 	int aveScore = 0;
	
	
	public double aveMthd(int[] avr){
		
		int total=0;
		for (int i = 0; i < avr.length; i++) {
			total = total + avr[i];
			aveScore = total/avr.length;
			
		}
		
		return aveScore;
	}
		
		
	
	public int maxmthd( int[] avr){
		int cnt=0;
		while( cnt<avr.length){
			maxScore = Math.max( maxScore, avr[cnt]);
			cnt++;
		}
	return maxScore;
		
	}
	
	public int minMthd(int[] avr){
		int cnt =0;
		while (cnt<avr.length) {
			
			minScore = Math.min( minScore , avr[cnt]);
			
			cnt++;
			
		}
		return minScore;
		
	}
	
	public static void main(String[] args) {
	System.out.println("number number of grade");
	Scanner msc = new Scanner(System.in);
	     int n = msc.nextInt();
	      int[] classGrade = new int[n];
	      
	     System.out.println("enter class grades  :");
	     Scanner scan = new Scanner(System.in);
	     
	     for (int i = 0; i < classGrade.length; i++) {
	    	 classGrade[i] = scan.nextInt();
			
		}
	      
	MaxMin mx = new MaxMin(); 
	
	System.out.println("your grade average is:" + mx.aveMthd(classGrade) );
	System.out.println("grade maxium grade is:" + mx.minMthd(classGrade) );
	System.out.println("your mininum grade is:" + mx.aveMthd(classGrade));
	
	

	}

}

